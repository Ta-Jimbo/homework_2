<span class="flash"><%= flash[:notice] %></span>

<h1>Editing Book</h1>

<% if @book.errors.any? %>
  <div class="alarm-box">
    <strong><%= @book.errors.count %> error prohibited this book from being saved:</strong>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with model: @book, url:book_path(@book.id), method: :patch do |f| %>

  <p>Title</p>
  <%= f.text_field :title %>

  <p>Body</p>
  <%= f.text_area :body %>

  <div><%= f.submit 'Update Book' %></div>

<% end %>

<span><%= link_to 'Show', book_path(@book.id) %></span>
<span><%= link_to 'Back', "/books" %></span>